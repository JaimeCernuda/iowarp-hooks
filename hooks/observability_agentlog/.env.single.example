# General Configuration
DEBUG_LOGGING=true

# Logging Configuration
# Directory where logs folder will be created (default: script's parent directory)
CHRONOLOG_LOG_DIR=/path/to/logs-directory

# ChronoLog Configuration
# Main ChronoLog library path - update this to match your installation
#update this path as needed
CHRONOLOG_LIB_PATH=/path/to/chronolog-install/Debug/lib

# Default fallback library path for hooks
# Update this to match your installation
CHRONOLOG_DEFAULT_LIB_PATH=/path/to/chronolog-install/Debug/lib

# Chronicle and Story Configuration
# Default names for chronicle and story
CHRONOLOG_CHRONICLE_NAME=claude_code_event
CHRONOLOG_STORY_NAME=logs

# Alternative search paths (colon-separated) if main path not found
#update these paths as needed
CHRONOLOG_SEARCH_PATHS=/path/to/chronolog-install/Debug/lib:/home/sislam6/chronolog-install/Debug/lib:/usr/local/lib/chronolog:/opt/chronolog/lib

# ChronoLog server configuration - ChronoVisor setup
# Update host and port as needed
CHRONOLOG_HOST=127.0.0.1
CHRONOLOG_PORT=5555

# Chronicle naming prefix
CHRONOLOG_CHRONICLE_PREFIX=claude_code_events

# Spack library dependencies (colon-separated paths)
# Update these paths to match your Spack installation
SPACK_LIB_PATHS=/path/to/spack/opt/spack/linux-ubuntu22.04-skylake_avx512/gcc-12.3.0/mercury-2.2.0-xuks2o2qxziw54pzsfozw2ogyzqhhfmt/lib:/path/to/spack/opt/spack/linux-ubuntu22.04-skylake_avx512/gcc-12.3.0/libfabric-1.16.1-qxl52zusj2ziopgiyfdab4yr3jidegug/lib:/path/to/spack/opt/spack/linux-ubuntu22.04-skylake_avx512/gcc-12.3.0/rdma-core-41.0-6ejumatpa7alopyybo4w45pffo5e7noc/lib:/path/to/spack/opt/spack/linux-ubuntu22.04-skylake_avx512/gcc-12.3.0/libnl-3.3.0-gav7czujoiu2ychaangvt5rnbxsl5lp4/lib:/path/to/chronolog-install/Debug/lib

# Enable debug logging (optional)
CHRONOLOG_DEBUG=true
